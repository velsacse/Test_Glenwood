                    <compileReport>true</compileReport>
					<runTarget>crm.html</runTarget>
					<!--i18nMessagesBundle>com.glenwood.crm.client.Messages</i18nMessagesBundle-->
                </configuration>
                  <executions>
                    <execution>
                      <goals>
						<goal>compile</goal>
						<goal>test</goal>
						<!--goal>i18n</goal-->
						<goal>generateAsync</goal>
					 </goals>
					</execution>
				</executions>
        <!-- Plugin configuration. There are many available options, see 
